<script type="application/json" js-discount-applications>
  {
      "current_discounts": [
          {%- for discount_application in cart.discount_applications -%}"{{ discount_application.title }}"{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}
      ],
      "available_discounts": [
          {%- for block in section.blocks -%}"{{ block.settings.title }}"{%- unless forloop.last -%},{%- endunless -%}{%- endfor -%}
      ]
  }
</script>

{% schema %}
{
  "name": "Discounts",
  "blocks": [
    {
      "type": "discount",
      "name": "Discount",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "BUNDLE SAVE 15",
          "info": "The discounts are applied in the order they are listed here. The highest value discount should be listed first, and the other discounts should be listed in descending order of value."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Discounts"
    }
  ]
}
{% endschema %}
